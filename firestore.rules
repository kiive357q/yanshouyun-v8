rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin (based on email convention from App.jsx)
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email.matches('.*admin.*');
    }

    // Match the multitenancy root
    match /artifacts/{appId}/public/data {
      
      // Projects: Auth users can read, Admins can write
      match /projects/{projectId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }

      // Assets: Users can read/write their own data; Admins can do all
      match /assets/{assetId} {
        allow read: if isAuthenticated() && (isAdmin() || resource.data.uploaderId == request.auth.uid || resource.data.projectId in getProjects()); 
        // Note: Complex query rules are simplified here for standard use
        allow create: if isAuthenticated() && request.resource.data.uploaderId == request.auth.uid;
        allow update, delete: if isAuthenticated() && (isAdmin() || resource.data.uploaderId == request.auth.uid);
      }

      // Audit Logs: Append only
      match /audit_logs/{logId} {
        allow read: if isAdmin();
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      }

      // Settings/Dictionaries: Read only for auth users
      match /settings/dictionaries {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }
  }
}
